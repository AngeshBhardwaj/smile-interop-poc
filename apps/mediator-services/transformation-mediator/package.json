{
  "name": "@smile/transformation-mediator",
  "version": "1.0.0",
  "description": "SMILE Transformation Mediator - Transforms CloudEvents to various formats",
  "main": "dist/index.js",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "openhim",
    "mediator",
    "transformation",
    "cloudevents",
    "interoperability",
    "hl7",
    "fhir",
    "json"
